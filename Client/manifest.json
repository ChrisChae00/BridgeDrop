{
  "manifest_version": 3,
  "name": "BridgeDrop",
  "description": "Cross-platform file sharing made easy.",
  "version": "1.0",
  "permissions": ["storage", "background", "webRequest"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
