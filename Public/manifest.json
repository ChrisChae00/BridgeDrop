{
  "manifest_version": 3,
  "name": "BridgeDrop",
  "version": "1.0",
  "description": "Peer-to-peer file sharing using WebRTC and Firebase.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.firebaseio.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
